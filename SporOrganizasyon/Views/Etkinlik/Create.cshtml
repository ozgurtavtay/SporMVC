@model SporOrganizasyon.Models.Etkinlik

@{
    ViewBag.Title = "Etkinlik Oluştur";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>Etkinlik Oluştur</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EtkinlikAdi, "Etkinlik Adı", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.EtkinlikAdi, new { htmlAttributes = new { @class = "form-control", required = "" } })
            @Html.ValidationMessageFor(model => model.EtkinlikAdi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipId, "Etkinlik Türü", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("TipId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TipId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MekanID, "Mekan Adı", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("MekanID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MekanID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EtkinlikTarihi, "Tarih", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.EtkinlikTarihi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EtkinlikTarihi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Kontenjan, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Kontenjan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Kontenjan, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sid, "Spor", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("Sid", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Sid, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    }
</div>
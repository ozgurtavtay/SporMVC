@model IEnumerable<SporOrganizasyon.Models.Etkinlik>

@{
    ViewBag.Title = "Etkinliklerim";
}



<div class="container">
    <h2>Etkinliklerim</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EtkinlikAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EtkinlikTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kontenjan)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.EtkinlikTipi.Tip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sporlar.SporAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mekan.MekanAdi)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EtkinlikAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EtkinlikTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kontenjan)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.EtkinlikTipi.Tip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sporlar.SporAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mekan.MekanAdi)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.EtkinlikId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.EtkinlikId }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }

    </table>

</div>
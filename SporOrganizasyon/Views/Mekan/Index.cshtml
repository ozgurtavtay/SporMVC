@model SporOrganizasyon.Models.Mekan

@{
    ViewBag.Title = "Create";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>Mekan Ekle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MekanAdi, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.MekanAdi, new { htmlAttributes = new { @class = "form-control", data_val = "true", data_val_required = "Mekan Adını Giriniz" } })
            @Html.ValidationMessageFor(model => model.MekanAdi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ilceler.Sehir, htmlAttributes: new { @class = "control-label" })
            @if (ViewBag.Iller != null)
            {
                @Html.DropDownListFor(m => m.Ilceler.Sehir, ViewBag.Iller as SelectList, "Il Secin", new { @class = "form-control"})
            }
            @Html.ValidationMessageFor(model => model.Ilceler.Sehir, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ilceler.Ad, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(m => m.IlceId, new SelectList(""), "Ilce Secin", new { @class = "form-control", data_val_required = "İlçe alanı gereklidir." })
            @Html.ValidationMessageFor(model => model.IlceId, "", new { @class = "text-danger" })
        </div>



        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>

    }
</div>

<span class="alert-danger"></span>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

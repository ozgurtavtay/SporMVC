<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link href="~/Content/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Scripts/sweetalert2.all.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="leftside">
                        <h2><a href="/">Hoşgeldin @ViewBag.User</a></h2>
                    </div>
                    <a class="nav-trigger" href="#0">
                        <span class="menu-text">Menu</span><span class="menu-icon"></span>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <nav>
        <ul class="primary-nav">

            <li>@Html.ActionLink("Etkinlik Oluştur", "Create", "Etkinlik")</li>
            <li>@Html.ActionLink("Mekan Ekle", "Index", "Mekan")</li>
            <li>@Html.ActionLink("Profil", "Index", "Kullanici")</li>

            <li>
                <span>Follow us</span>
                <ul>
                    <li class="social">
                        <a href="#0">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </li>
                    <li class="social">
                        <a href="#0">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </li>
                    <li class="social">
                        <a href="#0">
                            <i class="fab fa-dribbble"></i>
                        </a>
                    </li>
                    <li class="social">
                        <a href="#0">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <section class="main">
        @RenderBody()
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/velocity.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>

